---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Unirse a una votación - Votora">
  <div class="min-h-screen bg-white">
    <header class="p-4">
      <div class="max-w-2xl mx-auto">
        <a href="/" class="inline-flex items-center gap-2">
          <img src="/logo.svg" alt="Votora" class="h-6" />
          <span class="font-medium">Votora</span>
        </a>
      </div>
    </header>

    <main class="max-w-2xl mx-auto px-4 py-12">
      <div class="flex items-center gap-2 mb-8">
        <a href="/" class="text-black hover:text-gray-600">←</a>
        <h1 class="text-2xl font-bold">Unirse a una votación</h1>
      </div>

      <div class="bg-white border rounded-lg p-6">
        <h2 class="text-xl font-semibold mb-2">Introduce el código</h2>
        <p class="text-votora-gray mb-6">Ingresa el código de la votación a la que deseas unirte</p>

        <form class="space-y-6">
          <div>
            <label for="code" class="block text-sm font-medium text-gray-700 mb-1">
              Código de votación
            </label>
            <input
              type="text"
              id="code"
              name="code"
              placeholder="EJ: ABC123"
              class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-black focus:border-black"
            />
          </div>

          <div>
            <label for="name" class="block text-sm font-medium text-gray-700 mb-1">
              Tu nombre (opcional)
            </label>
            <input
              type="text"
              id="name"
              name="name"
              placeholder="Ej: Juan Pérez"
              class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-black focus:border-black"
            />
          </div>

          <button
            type="submit"
            class="w-full bg-black text-white py-3 rounded-lg hover:bg-gray-800 transition-colors"
          >
            Unirse a la votación
          </button>
        </form>
      </div>
    </main>
  </div>
</Layout>